@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml.cshtml";
}

@model IEnumerable<FleaMarket.Models.Users>

<div class="titlebar">
    <div>@ViewBag.TitleBar</div>
</div>
<div class="newbt">
    <input type="button" value="新增用户" onclick="window.location.href = '/Users/Register'" />
</div>
<div class="list">
    <table class="listtb">
        <tr>
            <th>用户编号</th>
            <th>用户账号</th>
            <th>用户名</th>
            <th>性别</th>
            <th>宿舍楼</th>
            <th>电话</th>
            <th>个人简介</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        @if (Model != null && Model.Any())   //判断Model不为空，且Model中包含元素
        {
            //循环遍历集合中的元素  Model是控制器传递过来的泛型集合
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.UserAccount</td>
                    <td>@user.UserName</td>
                    <td>@user.UserGender</td>
                    <td>@user.UserAddress </td>
                    <td>@user.UserPhone</td>
                    <td>@user.UserIntro</td>
                    @if (user.UserStatus == 1)
                    {
                        <td>正常</td>
                    }
                    else
                    {
                        <td>禁用</td>
                    }
                    <td>
                        <a href="/AdminUser/Edit/@user.UserID">编辑</a> |
                        <a href="/AdminUser/Delete/@user.UserID" onclick="return confirm('确认删除吗？')">删除</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
