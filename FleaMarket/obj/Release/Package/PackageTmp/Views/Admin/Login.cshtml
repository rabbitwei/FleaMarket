@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>登录界面</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no">
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/iconfont/style.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/AdminLogin.css" rel="stylesheet" />
    <script type="text/javascript">
        function changeCode() {
            //获取验证码图片元素
            var obj = document.getElementById("vcodeing");
            //原因：浏览器有缓存效果，通过添加随机数产生不同的地址来避免缓存
            //继续指定图片的来源src
            obj.src = "/Admin/ValidateCode?" + Math.random();
        }
    </script>
    <style>
        #vcode {

        }
    </style>
</head>
<body>

    <div class="container wrap1" style="height:450px;">
        <h2 class="mg-b20 text-center">后台登录页面</h2>
        <div class="col-sm-8 col-md-5 center-auto pd-sm-50 pd-xs-20 main_content">
            <p class="text-center font16">用户登录</p>
            <form action="/Admin/Login" method="post">
                <div class="form-group mg-t20">
                    <i class="icon-user icon_font"></i>
                    <input required name="username" type="text" class="login_input" id="username" placeholder="请输入用户名" />
                </div>
                <div class="form-group mg-t20">
                    <i class="icon-lock icon_font"></i>
                    <input required name="userpwd" type="password" class="login_input" id="userpwd" placeholder="请输入密码" />
                </div>
                <div class="form-group mg-t20">
                    <i class="icon-lock icon_font"></i>
                    <input required name="vcode" type="text" class="login_input" id="vcdoe" placeholder="请输入验证码" />
                    <img id="vcode" src="/Admin/ValidateCode" onclick="changeCode()" />
                </div>
                <div class="checkbox mg-b25">
                    <label>
                        <input type="checkbox" name="isremember" />记住我的登录信息
                    </label>
                </div>
                <button type="submit" class="login_btn">登 录</button>
            </form>
        </div>
        <!--row end-->
    </div>
</body>
</html>
