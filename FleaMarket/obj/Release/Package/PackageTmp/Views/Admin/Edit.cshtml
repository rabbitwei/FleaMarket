@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml.cshtml";
}
@model FleaMarket.Models.Administrators

<script>
    function validata() {
        var password = document.getElementById("password");
        var confirm = document.getElementById("confirm");
        if (password.value == confirm.value) {
            return true
        };
        alert("两次密码不一致");
        password.value = null;
        confirm.value = null;
        return false;
    }
</script>

<form action="/Admin/Edit" onsubmit="return validata()" method="post">
    <div class="titlebar">
        <div>@ViewBag.TitleBar</div>
    </div>
    <div class="list">
        <table class="listtb">
            <tr>
                <td>用户名</td>
                <td> <input type="text" required name="adminname" value="@Model.AdminName" readonly="readonly" /> </td>
            </tr>
            <tr>
                <td>密码</td>
                <td> <input id="password" type="password" required name="adminpwd" value="@Model.AdminPwd" /> </td>
            </tr>
            <tr>
                <td>确认密码</td>
                <td>
                    <input id="confirm" type="password" required value="@Model.AdminPwd" />
                </td>
            </tr>
            <tr>

                <td colspan="3" align="center">
                    <input type="submit" value="添加" />
                    <input type="hidden" name="adminid" value="@Model.AdminID" />
                </td>
            </tr>
        </table>
    </div>
</form>